#!/usr/bin/env bash

OPTION=$1
APPID=$2
BUILDID=$3
MEDIAID=$4

PROJECT_ROOT="@PROJECT_ROOT_DIR@"

createBuild()
{
    local APPID=$1
    local BUILDID=$2
    local MEDIAID=$3

    cp ola_client_launcher.exe tmp/build
    cp ola_client_store.exe tmp/build
	cp "$PROJECT_ROOT/ola/client/store/images/ola_store_bag.ico" tmp/build
	cp "$PROJECT_ROOT/ola/client/store/images/ola_store_bag.png" tmp

    sed "s/MEDIAID/$MEDIAID/g" ola_store.build.yml > tmp/ola_store.build.yml
    
    echo -ne "create build $APPID $BUILDID tmp/ola_store.build.yml tmp/build tmp/ola_store_bag.png\nq\n" | ola_client_cli
}

createMedia()
{
    local APPID=$1
    local MEDIAID=$2

    echo "create media $PROJECT_ROOT"
   
    for filename in $PROJECT_ROOT/media/*.png; do
        magick convert "$filename" "tmp/media/$(basename "$filename" .png).jpg"
    done

    for filename in $PROJECT_ROOT/media/*.png; do
        magick convert -resize 384x216 "$filename" "tmp/media/$(basename "$filename" .png)t.jpg"
    done

    echo -ne "create media $APPID $MEDIAID tmp/media\nq\n" | ola_client_cli
}


rm -rf tmp
mkdir tmp
mkdir tmp/build
mkdir tmp/media


if [ $OPTION == "m" ] || [ $OPTION == "A" ] ; then
    createMedia $APPID $MEDIAID
fi

if [ $OPTION == "b" ] || [ $OPTION == "A" ]; then
    createBuild $APPID $BUILDID $MEDIAID
fi
